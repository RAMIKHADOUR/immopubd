{% extends 'base.html.twig' %}

{% block title %}Adresses index{% endblock %}

{% block body %}
    <h1>Adresses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero_voie</th>
                <th>Voie</th>
                <th>Type_voie</th>
                <th>Ville</th>
                <th>Code_postale</th>
                <th>Region</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adress in adresses %}
            <tr>
                <td>{{ adress.id }}</td>
                <td>{{ adress.numeroVoie }}</td>
                <td>{{ adress.voie }}</td>
                <td>{{ adress.typeVoie }}</td>
                <td>{{ adress.ville }}</td>
                <td>{{ adress.codePostale }}</td>
                <td>{{ adress.region }}</td>
                <td>{{ adress.updatedAt ? adress.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_adresses_show', {'id': adress.id}) }}">show</a>
                    <a href="{{ path('app_adresses_edit', {'id': adress.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adresses_new') }}">Create new</a>
{% endblock %}
