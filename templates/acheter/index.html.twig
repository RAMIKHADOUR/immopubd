<!-- ======= Intro Section ======= -->
<div class="intro intro-carousel swiper position-relative">

    <div class="swiper-wrapper">

        <div class="swiper-slide carousel-item-a intro-item bg-image"
            style="background-image: url(assets/img/slide-1.jpg)">
            <div class="overlay overlay-a"></div>
            <div class="intro-content display-table">
                <div class="table-cell">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="intro-body">
                                    <p class="intro-title-top">
                                        <br>
                                    </p>
                                    <h1 class="intro-title mb-4 ">
                                        <span class="color-b"> </span>
                                        <br>
                                    </h1>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <div class="swiper-slide carousel-item-a intro-item bg-image"
            style="background-image: url(assets/img/slide-2.jpg)">
            <div class="overlay overlay-a"></div>
            <div class="intro-content display-table">
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <div class="p-4">
                                <img src="/img/home1.jpg" alt="home1" width="90%">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="m-4">
                                <br><br><br>
                                <p class="text">“Bienvenue sur notre application de
                                    publication d'annonces immobilières”</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="swiper-slide carousel-item-a intro-item bg-image"
            style="background-image: url(assets/img/slide-3.jpg)">
            <div class="overlay overlay-a"></div>
            <div class="intro-content display-table">
                <div class="table-cell">
                    <div class="container mt-4">
                        <h1>Rechercher des annonces</h1>
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col">
                                {{ form_row(form.category) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.type) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.minSurface) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.maxSurface) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.minPrix) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.maxPrix) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.ville) }}
                            </div>
                        </div>
                        <button class="btn btn-primary">Rechercher</button>
                        {{ form_end(form) }}

                        <h2>Résultats</h2>
                        {% if annonces is not empty %}
                        <ul>
                            {% for annonce in annonces %}
                            <li>
                                <strong>{{ annonce.title }}</strong> ({{ annonce.reference }}) - {{
                                annonce.propertys.surface }} m², {{
                                annonce.propertys.prix }} €
                            </li>
                            {% endfor %}
                        </ul>
                        {% else %}
                        <p>Aucune annonce trouvée.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="swiper-pagination"></div>
</div><!-- End Intro Section -->