        <a href="{{path('app_annonces_index')}}" class="sidenav-link">Mes annonces</a> 
    </div>

<main>
    <button data-target="example-sidenav" class="btn press amaranth dark-1 sidenav-trigger hide-md-up">
        Open sidenav
    </button>
    {% block body %}{% endblock %}
</main>

    <footer class="footer success">
        Copyright © 2024 - ImmoDispo
    </footer>
