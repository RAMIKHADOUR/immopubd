<div class="container m-5">
    {{ form_start(form) }}

    <div class="container">
        <div class="card mb-4">
            <div class="row m-4">
                <h3 class="m-4 text-center text-success">Coordonnées</h3>
                <div class="form-group col-6">
                    {{ form_label(form.civilite) }}
                    {{ form_widget(form.civilite) }}
                    <div class="form-error">
                        {{ form_errors(form.civilite) }}
                    </div>
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                    <div class="form-error">
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.prenom) }}
                    {{ form_widget(form.prenom) }}
                    <div class="form-error">
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.tele_fixe) }}
                    {{ form_widget(form.tele_fixe) }}
                    <div class="form-error">
                        {{ form_errors(form.tele_fixe) }}
                    </div>
                </div>

                <div class="form-group col-6">
                    {{ form_label(form.tele_mobile) }}
                    {{ form_widget(form.tele_mobile) }}
                    <div class="form-error">
                        {{ form_errors(form.tele_mobile) }}
                    </div>
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    <div class="form-error">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group mt-4">
            {{ form_widget(form) }}
            <button class="btn btn-warning">{{ button_label|default('Valider') }}</button>
            <a href="{{ path('app_propertys_index') }}" class="btn btn-success">Retour à la Liste</a>
        </div>
    </div>
    {{ form_end(form) }}
</div>